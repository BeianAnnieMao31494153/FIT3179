{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Renewable Energy Share per country",
  "width": 800,
  "height": 400,
  "projection": {
    "type": "equalEarth"
  },
  "data": {
    "url": "./ne_110m.json",
    "format": {
      "type": "topojson",
      "feature": "ne_110m_admin_0_countries"
    }
  },
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "../data/global-data-on-sustainable-energy-2019.csv"
        },
        "key": "Entity",
        "fields": [
          "Renewable energy share in the total final energy consumption (%)"
        ]
      }
    },
    {
      "calculate": "datum.Active + 0.1",
      "as": "Renewable"
    }
  ],
  "mark": {
    "type": "geoshape"
  },
  "encoding": {
    "color": {
      "field": "Renewable energy share in the total final energy consumption (%)",
      "type": "quantitative"
    },
    "tooltip": [
      {
        "field": "properties.NAME",
        "type": "nominal",
        "title": "Entity"
      },
      {
        "field": "Renewable energy share in the total final energy consumption (%)",
        "type": "quantitative"
      }
    ]
  }
}