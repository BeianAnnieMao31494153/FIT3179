{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "height": 500,
    "width": 500,
    "title": "Renewable Energy in Australia",
    "data": {
        "url": "../data/australia_energy_data.csv"
    },
    "mark": {
        "type": "area",
        "line": {
          "color": "#afe5f1"
        },
        "color": {
          "x1": 1,
          "y1": 1,
          "x2": 1,
          "y2": 0,
          "gradient": "linear",
          "stops": [
            {
              "offset": 0,
              "color": "white"
            },
            {
              "offset": 1,
              "color": "#afe5f1"
            }
          ]
        }
      },
      "encoding": {
        "x": {
          "field": "Year",
          "type": "temporal"
        },
        "y": {
          "field": "Renewables (% equivalent primary energy)",
          "type": "quantitative"
        }
      }
    }